<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.omarg.challegennavigationcontroller.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_terminosFragment"
            app:destination="@id/terminosFragment" />
        <action
            android:id="@+id/action_homeFragment_to_nameFragment"
            app:destination="@id/nameFragment" />
    </fragment>
    <fragment
        android:id="@+id/terminosFragment"
        android:name="com.omarg.challegennavigationcontroller.TerminosFragment"
        android:label="fragment_terminos"
        tools:layout="@layout/fragment_terminos" />
    <fragment
        android:id="@+id/nameFragment"
        android:name="com.omarg.challegennavigationcontroller.NameFragment"
        android:label="fragment_name"
        tools:layout="@layout/fragment_name" >
        <action
            android:id="@+id/action_nameFragment_to_correoFragment"
            app:destination="@id/correoFragment" />
    </fragment>
    <fragment
        android:id="@+id/correoFragment"
        android:name="com.omarg.challegennavigationcontroller.correoFragment"
        android:label="fragment_correo"
        tools:layout="@layout/fragment_correo" >
        <action
            android:id="@+id/action_correoFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.omarg.challegennavigationcontroller.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_infoFragment_to_terminosFragment"
            app:destination="@id/terminosFragment" />
    </fragment>
</navigation>